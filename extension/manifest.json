{
  "manifest_version": 3,
  "name": "GitHub Bounty Rewards",
  "version": "0.0.1",
  "description": "Reward contributors when their PRs solve GitHub issues.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "GitHub Bounty Rewards"
  },
  "permissions": [
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/issues/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
